@model List<RPGMaker.Models.Index.ItemViewModel>

@{
    ViewData["Title"] = "Items";
}

<h1>Itens</h1>

<p>
    <a asp-action="Create" class="btn btn-default">Create new</a>
</p>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Tipo de Item</th>
        <th>Efeito</th>

    </tr>
    @foreach (RPGMaker.Models.Index.ItemViewModel item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Type</td>
            <td>@item.Effect</td>
        </tr>
    }
</table>
